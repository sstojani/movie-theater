@model Producer

@{
    ViewData["Title"] = "Details for Producer";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" style="max-height:150px; width:150px;" />
                </div>
                <div class="form-group hapsira">
                    <label asp-for="ProfilePictureURL" class="control-label" style="margin-bottom:10px;"></label>
                    <input asp-for="ProfilePictureURL" class="form-control" readonly />
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>
                <div class="form-group hapsira">
                    <label asp-for="FullName" class="control-label" style="margin-bottom:10px;"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group hapsira">
                    <label asp-for="Bio" class="control-label" style="margin-bottom:10px;"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <style>
                    .hapsira {
                        margin-top: 30px;
                    }</style>

                <div class="form-group" style="margin-top:20px;">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success" style="float:right;" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}