@using eTicket.Data.ViewModels
@model LoginVM;

@{
    ViewData["Title"] = "Login to your account";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4 class ="text-center">Login to your Account</h4>
        </p>

        @if(TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group" style="margin-bottom: 10px;">
                        <label asp-for="EmailAddress" class="control-label" style="margin-bottom: 10px;"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label" style="margin-bottom: 10px;"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="text-center" style="margin-top: 10px;">
                        <a asp-controller="Account" asp-action="Register">Dont have an account!</a>
                    </div>

                    <div class="form-group" style="margin-top: 10px;">
                        <input class="btn btn-outline-success" type="submit" value="Log in" style="float:right;" />
                        <a class="btn btn-outline-secondary" asp-controller="Movies" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
