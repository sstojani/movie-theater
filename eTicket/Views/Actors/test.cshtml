@using eTicket.Models
@model Actor
<div style="position:fixed; right:25px; bottom:25px; " class="text-white">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Launch demo modal
    </button>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col-md-8 offset-2">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group text-center">
                            <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-height:150px; width:150px;" />
                        </div>
                        <div class="form-group hapsira">
                            <label asp-for="ProfilePictureURL" class="control-label" style="margin-bottom:10px;"></label>
                            <input asp-for="ProfilePictureURL" class="form-control" />
                            <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                        </div>
                        <div class="form-group hapsira">
                            <label asp-for="FullName" class="control-label" style="margin-bottom:10px;"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group hapsira">
                            <label asp-for="Bio" class="control-label" style="margin-bottom:10px;"></label>
                            <input asp-for="Bio" class="form-control" />
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>
                        <style>
                            .hapsira {
                                margin-top: 30px;
                            }</style>

                        <div class="form-group" style="margin-top:20px;">
                            <input type="submit" value="Create" class="btn btn-outline-success" style="float:right;" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
